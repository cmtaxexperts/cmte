  <script>
      // 1. On Load: Check if we are "Admin" or "Client"
      window.onload = function() {
          // Attempt to get Base URL automatically
          document.getElementById('portalUrl').value = window.location.href.split('?')[0];

          const params = new URLSearchParams(window.location.search);
          
          if(params.has('am')) {
              // CLIENT MODE: Data exists in URL -> Lock fields
              document.getElementById('clientName').value = params.get('n') || '';
              document.getElementById('clientId').value = params.get('id') || '';
              document.getElementById('service').value = params.get('s') || 'Other';
              document.getElementById('amount').value = params.get('am') || '';
              
              // Hide Admin Tools
              document.getElementById('adminPanel').style.display = 'none'; 
              
              // Regenerate UI
              generateData();
          } else {
              // ADMIN MODE: Initialize default QR
              generateData();
          }
      };

      function generateData() {
          // Get Inputs
          const name = document.getElementById('clientName').value.trim();
          const id = document.getElementById('clientId').value.trim();
          const service = document.getElementById('service').value;
          const amount = document.getElementById('amount').value;
          
          const payeeName = document.getElementById('payeeName').value;
          const payeeVPA = document.getElementById('payeeVPA').value; // shanicm@oksbi
          const portalUrl = document.getElementById('portalUrl').value;

          // Format Amount
          let fmtAmount = "0.00";
          if (amount && parseFloat(amount) > 0) {
              fmtAmount = parseFloat(amount
